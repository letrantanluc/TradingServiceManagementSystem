@model Do_An_Chuyen_Nganh.Models.Condition

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Thêm Tình Trạng Mới</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConditionName" class="control-label">Tên Tình Trạng</label>
                <input name="ConditionName" class="form-control" />
                <span asp-validation-for="ConditionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Thêm Tình Trạng</button>
            </div>
        </form>
    </div>
</div>
<div class="d-flex">
    <a class="btn btn-back" href="/Admin/ManageCondition/Index">
        Về danh sách
    </a>
</div>

<script type="text/javascript">
    function removeDiacritics(str) {
        str = str.replace(/Đ/g, "D");
        str = str.replace(/đ/g, "d");
        str = str.replace(/ /g, "-"); // replace space to "-"
        return str.normalize("NFD").replace(/[\u0300-\u036f]/g, "");
    }
</script>