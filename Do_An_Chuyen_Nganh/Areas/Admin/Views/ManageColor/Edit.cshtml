@model Do_An_Chuyen_Nganh.Models.Color

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>Color</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Id)
            @*            <input type="hidden" asp-for="Id" name="Id" /> *@
            <div class="form-group">
                <label asp-for="ColorName" class="control-label">Tên Màu</label>
                <input name="ColorName" class="form-control" value="@Html.DisplayFor(item => item.ColorName)" />
                <span asp-validation-for="ColorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div class="d-flex">
            <a class="btn btn-back" href="/Admin/ManageColor/Index">
                Về danh sách
            </a>
        </div>
    </div>
</div>

