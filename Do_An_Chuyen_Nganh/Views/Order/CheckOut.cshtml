@model Do_An_Chuyen_Nganh.Models.Order


@{
  
    List<Do_An_Chuyen_Nganh.Models.CartItem> carts = ViewBag.Carts as List<Do_An_Chuyen_Nganh.Models.CartItem>;
}

<section class="checkout spad">
    <div class="container">
        @*<div class="row">
            <div class="col-lg-12">
                <h6>
                    <span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code
                </h6>
            </div>
        </div>*@
        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form action="@Url.Action("CheckOut", "Order")" method="post">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="checkout__input">
                            <p>CustomerName<span>*</span></p>
                            <input name="CustomerName" type="text" value="@Model.CustomerName" placeholder="Le Van A">
                        </div>
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input type="text" name="Address" value="@Model.Address" placeholder="Street Address" class="checkout__input__add ">
                        </div>
                        <div class="checkout__input">
                            <p>PhoneNumber<span>*</span></p>
                            <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" placeholder="090xxxxxxxx">
                        </div>
                        <div class="checkout__input">
                             <p>Email<span>*</span></p>
                            <input type="text" name="Email" value="@Model.Email" placeholder="abc@gmail.com">
                        </div>
                        <div class="checkout__input">
                                <p>Order notes<span></span></p>
                                <input type="text"
                                    placeholder="Notes about your order, e.g. special notes for delivery.">
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">Products <span>Total</span></div>
                            <ul>
                                @foreach (var item in carts)
                                {
                                    <li>@item.ProductName<span>@item.Price.ToString("N0")đ</span></li>
                                }
                               
                            </ul>
                            <div class="checkout__order__subtotal">Subtotal <span>@carts.Sum(item => (item.Price * item.Quantity)).ToString("N0")đ</span></div>
                            <div class="checkout__order__total">Total <span>@carts.Sum(item => (item.Price * item.Quantity)).ToString("N0")đ</span></div>
                            <h4>Payment</h4>
                            <div>
                                <label for="payment">
                                    <input type="radio" id="cash" name="Payment" value="cash">
                                    <span class="checkmark"></span>
                                    Cash
                                </label>
                            </div>
                            <div>
                                <label for="payment">
                                    
                                    <input type="radio" id="momo" name="Payment" value="momo">
                                    <span class="checkmark"></span>
                                    Momo
                                </label>
                            </div>
                            <div>
                                <label for="payment">

                                    <input type="radio" id="vnpay" name="Payment" value="vnpay">
                                    <span class="checkmark"></span>
                                    VnPay
                                </label>
                            </div>
                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>