@model IEnumerable<Do_An_Chuyen_Nganh.Models.Product>

<section class="product spad">
    <div class="container">
        <div class="row">
           
            <div class="col-lg-12 col-md-12">          
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="@Url.Content("~/images/" + item.Images.FirstOrDefault()?.ImagePath)">
                                    <ul class="product__item__pic__hover">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="@Url.Action("Edit", "Products", new { id = item.Id })"><i class="fa fa-pencil"></i></a></li>
                                        @*<li><a href="@Url.Action("Delete", "Products", new { id = item.Id })"><i class="fa fa-trash"></i></a></li>*@
                                       <li><a href="#" class="btnDelete" data-id="@item.Id"><i class="fa fa-trash"></i></a></li>

                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a asp-controller="Products" asp-action="Details" asp-route-Id="@item.Id">@item.Title</a></h6>
                                    <h5>@item.Price.ToString("N0")đ</h5>

                                </div>
                            </div>
                        </div>
                    }


                </div>

            </div>
        </div>
    </div>
</section>


<script>
    $(document).ready(function () {
        $('body').on('click', '.btnDelete', function () {
            var productId = $(this).data('id');

            // Sử dụng hộp thoại xác nhận
            var confirmation = confirm('Bạn có muốn xóa sản phẩm này không?');

            if (confirmation) {
                $.ajax({
                    url: '/Products/DeleteAjax/' + productId,
                    type: 'POST',
                    success: function (data) {
                        if (data.success) {
                            // Xóa sản phẩm khỏi DOM
                            $('#product-' + productId).remove();
                            location.reload();

                        } else {
                            alert('Không thể xóa sản phẩm.');
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi khi xóa sản phẩm.');
                    }
                });
            }
        });
    });
</script>



